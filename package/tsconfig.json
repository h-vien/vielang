{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "allowJs": false,
      "target": "ES2022", 
      "outDir": "dist", 
      "esModuleInterop": true,
      "strict": true ,
      "skipLibCheck": true ,
      "declaration": true,
      "baseUrl": ".",
      "paths": {
        "@parser": [
          "./src/index.ts"
        ],
        "@parser/*": [
          "./src/*"
        ]
      }
    },
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    },
    "include": ["src/**/*"] ,
    "exclude": ["node_modules", "dist"]
  }
  