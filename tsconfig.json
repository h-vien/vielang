{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2022", 
      "outDir": "dist", 
      "esModuleInterop": true,
      "strict": true ,
      "skipLibCheck": true ,
      "baseUrl": ".",
      "paths": {
        "@parser": [
          "./src/index.ts"
        ],
        "@parser/*": [
          "./src/*"
        ]
      }
    },
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    },
    "files": ["src/type.d.ts"], 
    "include": ["src/**/*"] 
  }
  